<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gym2"
    tools:context=".UpdateDoumbleFly">

    <EditText
        android:id="@+id/editTextTextMultiLine3"
        android:layout_width="344dp"
        android:layout_height="100dp"
        android:background="#40C4FF"
        android:ems="10"
        android:gravity="start|top"
        android:hint="UPDATE ADITIONAL INFORMATION #3"
        android:inputType="textMultiLine"
        android:textColorHint="#131212"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.409"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.714" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="413dp"
        android:layout_height="69dp"
        android:background="#032763"
        android:text="@string/TEXT4"
        android:textAlignment="center"
        android:textColor="#F6F0F0"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:text="UPDATE  STEPS" />

    <EditText
        android:id="@+id/eq1"
        android:layout_width="344dp"
        android:layout_height="100dp"
        android:background="#40C4FF"
        android:ems="10"
        android:gravity="start|top"
        android:hint="UPDATE ADITIONAL INFORMATION #1"
        android:inputType="textMultiLine"
        android:textColorHint="#131212"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.225" />

    <EditText
        android:id="@+id/editTextTextMultiLine2"
        android:layout_width="344dp"
        android:layout_height="100dp"
        android:background="#40C4FF"
        android:ems="10"
        android:gravity="start|top"
        android:hint="UPDATE ADITIONAL INFORMATION #2"
        android:inputType="textMultiLine"
        android:textColorHint="#131212"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.409"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.468" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#18038C"
        android:text="@string/BUTTON6"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.888"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView"
        app:layout_constraintVertical_bias="0.932" />

</androidx.constraintlayout.widget.ConstraintLayout>