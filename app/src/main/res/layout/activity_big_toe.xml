                            android:textColorHint="#FFFFFF"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/textView18"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#3FFF"
                            android:text="2) Exhale and bend forward from the hip joint, keeping your legs straight. Wrap your index and middle fingers of each hand around the corresponding big toe, and then wrap your thumb around the ot her two fingers to secure"
