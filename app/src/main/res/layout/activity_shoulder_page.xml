<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gym2"
    tools:context=".ShoulderPage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAlignment="textStart">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="#673AB7"
                    android:text="SHOULDER "
                    android:textAlignment="center"
                    android:textSize="36sp"
                    android:textStyle="bold" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="176dp"
                        android:layout_height="111dp"
                        android:layout_marginTop="50dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/shoulderpress" />

                    <Button
                        android:id="@+id/button"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginTop="50dp"
                        android:layout_weight="1"
                        android:background="#F6F3F3"
                        android:text="DUMBBELL SHOULDER PRESS"
                        android:textSize="24sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">


                        <Button
                            android:id="@+id/button1"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginTop="80dp"
                            android:layout_weight="1"
                            android:background="#F6F3F3"
                            android:text="DUMBBELL LATERAL RAISE"
                            android:textSize="24sp" />

                        <ImageView
                            android:id="@+id/imageView9"
                            android:layout_width="176dp"
                            android:layout_marginTop="80dp"
                            android:layout_height="111dp"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/shoulderexercise" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageView10"
                            android:layout_width="176dp"
                            android:layout_marginTop="80dp"
                            android:layout_height="111dp"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/dumbbellfront1" />

                        <Button
                            android:id="@+id/button3"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginTop="80dp"
                            android:layout_weight="1"
                            android:background="#F6F3F3"
                            android:text="DUMBBELL FRONT RAISE"
                            android:textSize="24sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">


                        <TextView
                            android:id="@+id/textView25"
                            android:layout_width="match_parent"
                            android:layout_height="51dp"
                            android:background="#1B1A1A"
                            android:layout_marginTop="100dp"
                            android:text="ALL RIGHTS RESERVED @2020"
                            android:textAlignment="center"
                            android:textColor="#FAF6F6"
                            android:textSize="24sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>