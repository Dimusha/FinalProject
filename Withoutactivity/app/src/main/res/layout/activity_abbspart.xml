<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".chestpart">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bicycle"
                android:layout_width="347dp"
                android:layout_height="650dp"
                android:layout_marginTop="38dp"
                android:layout_marginBottom="30dp"

                android:layout_weight="1"
                android:background="@drawable/bicycleex" />

            <Button
                android:id="@+id/crunches"
                android:layout_width="347dp"
                android:layout_height="650dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="38dp"
                android:layout_marginBottom="30dp"
                android:layout_weight="1"
                android:background="@drawable/crunches1" />

            <Button
                android:id="@+id/flutter"
                android:layout_width="347dp"
                android:layout_height="650dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="38dp"
                android:layout_marginBottom="30dp"
                android:layout_weight="1"
                android:background="@drawable/flutterkicks" />



        </LinearLayout>
    </HorizontalScrollView>
</LinearLayout>